<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Report.NewReport">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:cardElevation="16dp"
        tools:cardCornerRadius="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            android:layout_height="200dp">

            <TableRow>
                <android.support.v7.widget.CardView
                    android:layout_width="130dp"
                    android:layout_height="185dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/ivImg"
                        android:layout_width="125dp"
                        android:layout_height="120dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="120dp"
                        android:text="Upload from "/>
                    <ImageView
                        android:id="@+id/btnUploadPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:tag="gallery"
                        android:text="Upload"
                        android:src="@mipmap/images"/>

                </android.support.v7.widget.CardView>
                <RelativeLayout>
                    <Spinner
                        android:id="@+id/spBrandMoto"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/brands"
                        android:layout_marginTop="10dp"
                        android:hint="brand"/>
                    <Spinner
                        android:id="@+id/spYearMoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp" />
                    <TextView
                        android:id="@+id/tvDateLost"
                        android:layout_width="150dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:tag="date"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:background="#eee"
                        android:text="yyyy/mm/dd"/>
                    <Button
                        android:id="@+id/btnSaveReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="save"
                        android:text="Save"
                        android:layout_marginTop="145dp"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="230dp">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:context=".Report.NewReport"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>