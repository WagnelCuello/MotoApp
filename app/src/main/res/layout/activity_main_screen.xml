<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".MainScreen">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow android:gravity="center_horizontal">
                <android.support.v7.widget.CardView
                    android:layout_marginTop="80dp"
                    android:layout_height="118dp"
                    android:layout_marginBottom="16dp"
                    cardview:cardElevation="@dimen/iconsShadow"
                    cardview:cardCornerRadius="@dimen/iconsBorderRadius">
                    <ImageButton
                        android:id="@+id/btnNewReport"
                        android:tag="newReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/motorcycle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New"
                        android:layout_gravity="bottom|center_horizontal"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="50dp"
                    android:tag="users"
                    android:layout_height="118dp"
                    android:layout_marginBottom="16dp"
                    cardview:cardElevation="@dimen/iconsShadow"
                    cardview:cardCornerRadius="@dimen/iconsBorderRadius">
                    <ImageButton
                        android:id="@+id/btnUsers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/users"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:layout_gravity="bottom|center_horizontal"/>
                </android.support.v7.widget.CardView>
            </TableRow>
            <TableRow android:gravity="center_horizontal">
                <android.support.v7.widget.CardView
                    android:layout_marginTop="80dp"
                    android:layout_height="118dp"
                    android:layout_marginBottom="16dp"
                    cardview:cardElevation="@dimen/iconsShadow"
                    cardview:cardCornerRadius="@dimen/iconsBorderRadius">
                    <ImageButton
                        android:id="@+id/btnReports"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="report"
                        android:src="@mipmap/report"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reports"
                        android:layout_gravity="bottom|center_horizontal"/>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="80dp"
                    android:layout_marginLeft="50dp"
                    android:layout_height="118dp"
                    android:layout_marginBottom="16dp"
                    cardview:cardElevation="@dimen/iconsShadow"
                    cardview:cardCornerRadius="@dimen/iconsBorderRadius">
                    <ImageButton
                        android:id="@+id/btnOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tag="options"
                        android:src="@mipmap/settings"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Options"
                        android:layout_gravity="bottom|center_horizontal"/>
                </android.support.v7.widget.CardView>
            </TableRow>
        </TableLayout>
    </ScrollView>

</FrameLayout>