<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".MainScreen">

    <TextView
        android:id="@+id/tvCurrentUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:tag="cUser"
        android:text="."
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/ivLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:tag="logOut"
        android:layout_gravity="right"
        android:layout_marginRight="7dp"
        android:src="@mipmap/exit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <android.support.v7.widget.CardView
            android:layout_height="118dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            cardview:cardElevation="@dimen/iconsShadow"
            cardview:cardCornerRadius="@dimen/iconsBorderRadius">
            <ImageButton
                android:id="@+id/btnNewReport"
                android:tag="newReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/motorcycle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New"
                android:layout_gravity="bottom|center_horizontal"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:tag="users"
            cardview:cardElevation="@dimen/iconsShadow"
            cardview:cardCornerRadius="@dimen/iconsBorderRadius">
            <ImageButton
                android:id="@+id/btnUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="users"
                android:src="@mipmap/users"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:layout_gravity="bottom|center_horizontal"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="200dp"
            android:layout_height="118dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            cardview:cardElevation="@dimen/iconsShadow"
            cardview:cardCornerRadius="@dimen/iconsBorderRadius">
            <ImageButton
                android:id="@+id/btnReports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="report"
                android:src="@mipmap/report"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:layout_gravity="bottom|center_horizontal"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="200dp"
            android:layout_alignParentRight="true"
            android:layout_height="118dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="16dp"
            cardview:cardElevation="@dimen/iconsShadow"
            cardview:cardCornerRadius="@dimen/iconsBorderRadius">
            <ImageButton
                android:id="@+id/btnOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="options"
                android:src="@mipmap/settings"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Options"
                android:layout_gravity="bottom|center_horizontal"/>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    </ScrollView>

</FrameLayout>