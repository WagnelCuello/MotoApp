<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:cardElevation="10dp"
        tools:cardCornerRadius="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TableRow>
                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="170dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"></ImageView>
                    <Button
                        android:id="@+id/btnUploadImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|left"
                        android:layout_marginLeft="15dp"
                        android:text="Upload"/>

                </android.support.v7.widget.CardView>
                <RelativeLayout>
                    <Spinner
                        android:id="@+id/spBrandMoto"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/brands"
                        android:layout_marginTop="10dp"
                        android:hint="brand"/>
                    <Spinner
                        android:id="@+id/spYearMoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp" />
                    <TextView
                        android:id="@+id/tvDateLost"
                        android:layout_width="150dp"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="110dp"
                        android:background="#eee"
                        android:text="yyyy/mm/dd"/>

                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp">
        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            tools:context=".Report.MapsActivity" />
    </android.support.v7.widget.CardView>
</FrameLayout>